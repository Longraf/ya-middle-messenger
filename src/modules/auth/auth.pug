include ../input/input
include ../button/button

block auth
    section.container
        form.auth-form
            h1.auth-form__title Авторизоваться
            div.auth-form__input
                +input(label="Email" type='email', placeholder='Ваш e-mail')
            div.auth-form__input
                +input(label="Пароль" type='password', placeholder='Пароль')
            a(href="chat.pug").link.auth-form__button Вход
            a(href="registration.pug").link.auth-form__button Зарегистрироваться
