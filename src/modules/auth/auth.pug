include ../input/input
include ../button/button

block auth
    section.container
        form.auth-form
            h1.title.auth-form__title Авторизоваться
            div.auth-form__input
                +input(label='Логин' type='text', placeholder='Введите логин' name='login')
            div.auth-form__input
                +input(label='Пароль' type='password', placeholder='Введите пароль' name='password')
            div.auth-form__buttons
                +button(type='submit').link.auth-form__button Войти
            div.auth-form__buttons
                a(href='registration.pug').link Зарегистрироваться
