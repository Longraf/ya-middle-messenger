include ../input/input
include ../button/button

block registration
    h1.title.registration__title Регистрация
    form.registration
        div.registration__input
            +input(label='Email' type='email' placeholder='Ваш e-mail' name='email')
        div.registration__input
            +input(label='Логин' type='text' placeholder='Придумайте логин' name='login')
        div.registration__input
            +input(label='Имя' type='text' placeholder='Введите имя' name='first_name')
        div.registration__input
            +input(label='Фамилия' type='text' placeholder='Введите фимилию' name='second_name')
        div.registration__input
            +input(label='Телефон' type='phone' placeholder='Введите телефон' name='phone')
        div.registration__input
            +input(label='Пароль' type='password' placeholder='Придумайте пароль' name='password')
        div.registration__input
            +input(label='Пароль' type='password' placeholder='Повторите пароль')
        +button(type='submit').link.registration__button Зарегистрироваться
        a(href='auth.pug').link.registration__button Авторизоваться
